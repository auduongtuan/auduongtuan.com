{
  "tab_size": 2,
  "format_on_save": "on",
  "formatter": "prettier",
  "code_actions_on_format": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true,
  },
  "languages": {
    "TypeScript": {
      "formatter": "prettier",
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
    },
    "TSX": {
      "formatter": "prettier",
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
    },
    "JavaScript": {
      "formatter": "prettier",
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
    },
    "JSON": {
      "formatter": "prettier",
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
    },
    "CSS": {
      "formatter": "prettier",
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
    },
  },
  "lsp": {
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeCompletionsForModuleExports": true,
          "includeCompletionsForImportStatements": true,
        },
      },
    },
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "mode": "all",
          "rules": ["!debugger", "!no-only-tests/*"],
        },
      },
    },
  },
  "file_types": {
    "Dockerfile": ["Dockerfile*"],
    "JSON": ["*.json", ".cursorrules", ".windsurfrules"],
    "Markdown": ["*.md", "CLAUDE.md"],
  },
  "terminal": {
    "shell": {
      "program": "zsh",
    },
  },
}
